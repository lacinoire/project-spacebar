<?xml version="1.0" encoding="utf-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="ProjectSPACEbar.OrderDetailPage"
	Title="Order Details">
	<StackLayout
		Spacing="20"
		Padding="15">
		<Label
			Text="{Binding Text}"
			FontSize="Medium" />
		<Label
			Text="{Binding DetailText}"
			FontSize="Small" />
        <Button
            Text="Claim Order!"
            Clicked="OnClaimClicked" />
	</StackLayout>
</ContentPage>
